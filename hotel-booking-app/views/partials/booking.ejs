<form action="/booking/<%=id%>" method="POST">
    <div class="form-row text-left">
      <div class="form-group col-md-6">
        <label for="inputEmail4">Check-In:</label>
        <input type="date" name="checkin" value="<%=new Date().toJSON().slice(0,10)%>" class="form-control" id="inputEmail4">
      </div>
      <div class="form-group col-md-6">
        <label for="inputPassword4">Check-Out:</label>
        <input type="date" name="checkout" class="form-control" id="inputPassword4">
      </div>
    </div>
    <button type="submit" name="HotelId" value="<%=id%>" class="btn btn-primary">Submit</button>
  </form>